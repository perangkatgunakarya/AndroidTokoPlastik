<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h2">
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h3">
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="h3_bold">
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h4">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="h4_bold">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="p">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/pTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="p_bold">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/pTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <dimen name="h2TextSize">35sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>
    <dimen name="h4TextSize">17sp</dimen>
    <dimen name="pTextSize">15sp</dimen>


</resources>